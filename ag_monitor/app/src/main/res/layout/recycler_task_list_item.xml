<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/ten"
    android:gravity="center_vertical"
    android:background="@drawable/bg_task_list_item"
    android:elevation="@dimen/five"
    android:layout_marginHorizontal="@dimen/ten"
    android:layout_marginBottom="@dimen/ten"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imgTask"
        android:layout_width="@dimen/eighty_three"
        android:layout_height="@dimen/eighty_three"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textFirstText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Field 1 North Irrigation Set"
            android:textSize="@dimen/sixteen"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/ten"
            android:gravity="start"/>
        <TextView
            android:id="@+id/textSecondText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="35 hours for the week"
            android:textSize="@dimen/normal_text_size"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/dim_color"
            android:layout_marginHorizontal="@dimen/ten"
            android:gravity="start"
            android:layout_marginTop="@dimen/five"/>
    </LinearLayout>
</LinearLayout>