<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.account.CreateAccountActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgAgMonitor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/one_not_six"
                    android:src="@drawable/ag_monitor" />
                <TextView
                    android:id="@+id/textWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sixteen"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:text="@string/welcome_to_agmonitor"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eighteen"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/textPleaseLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:text="@string/please_create_your_account"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen"
                    android:visibility="visible" />
                <RelativeLayout
                    android:id="@+id/layoutFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fourty_six"
                    android:background="@drawable/bg_edit_text"
                    android:layout_marginHorizontal="@dimen/twenty_six">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TextInputLayoutFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five"
                        android:layout_marginTop="@dimen/five"
                        android:layout_marginEnd="@dimen/five"
                        android:hint="@string/name"
                        android:paddingTop="@dimen/three"
                        android:textColorHint="@color/edit_text_hint_color"
                        app:hintTextAppearance="@style/HintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/twenty_two"
                            android:layout_marginVertical="@dimen/ninteen"
                            android:background="@null"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/black"
                            android:textColorHint="@color/edit_text_hint_color"
                            android:textSize="@dimen/normal_text_size"
                            android:inputType="text"
                            android:maxLines="1"/>

                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layoutLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_six"
                    android:background="@drawable/bg_edit_text"
                    android:layout_marginHorizontal="@dimen/twenty_six">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TextInputLayoutLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five"
                        android:layout_marginTop="@dimen/five"
                        android:layout_marginEnd="@dimen/five"
                        android:hint="@string/last_name"
                        android:paddingTop="@dimen/three"
                        android:textColorHint="@color/edit_text_hint_color"
                        app:hintTextAppearance="@style/HintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/twenty_two"
                            android:layout_marginVertical="@dimen/ninteen"
                            android:background="@null"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/black"
                            android:textColorHint="@color/edit_text_hint_color"
                            android:textSize="@dimen/normal_text_size"
                            android:inputType="text"
                            android:maxLines="1"/>

                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layoutCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_six"
                    android:background="@drawable/bg_edit_text"
                    android:layout_marginHorizontal="@dimen/twenty_six">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TextInputLayoutCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five"
                        android:layout_marginTop="@dimen/five"
                        android:layout_marginEnd="@dimen/five"
                        android:hint="@string/company_name"
                        android:paddingTop="@dimen/three"
                        android:textColorHint="@color/edit_text_hint_color"
                        app:hintTextAppearance="@style/HintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editCompanyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/twenty_two"
                            android:layout_marginVertical="@dimen/ninteen"
                            android:background="@null"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/black"
                            android:textColorHint="@color/edit_text_hint_color"
                            android:textSize="@dimen/normal_text_size"
                            android:inputType="text"
                            android:maxLines="1"/>

                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layoutEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_six"
                    android:background="@drawable/bg_edit_text"
                    android:layout_marginHorizontal="@dimen/twenty_six">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TextInputEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five"
                        android:layout_marginTop="@dimen/five"
                        android:layout_marginEnd="@dimen/five"
                        android:hint="@string/email"
                        android:paddingTop="@dimen/three"
                        android:textColorHint="@color/edit_text_hint_color"
                        app:hintTextAppearance="@style/HintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/twenty_two"
                            android:layout_marginVertical="@dimen/ninteen"
                            android:background="@null"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/black"
                            android:textColorHint="@color/edit_text_hint_color"
                            android:textSize="@dimen/normal_text_size"
                            android:inputType="text"
                            android:maxLines="1"/>

                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layoutRegisterButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/seventeen"
                    android:background="@drawable/bg_button"
                    android:layout_marginHorizontal="@dimen/twenty_six">
                    <TextView
                        android:id="@+id/textButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="@dimen/eighteen"
                        android:layout_marginHorizontal="@dimen/twenty_two"
                        android:layout_marginVertical="@dimen/ninteen"
                        android:text="@string/register"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/lato_medium"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/layoutAlreadyAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/twenty_two"
                    android:layout_marginTop="@dimen/eight"
                    android:layout_marginBottom="56sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textDoNotHaveAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="@dimen/thirteen"
                        android:text="@string/already_have_an_account"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_black" />
                    <TextView
                        android:id="@+id/textSignIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="@dimen/thirteen"
                        android:text="@string/sign_in"
                        android:gravity="start"
                        android:textColor="@color/button_color"
                        android:fontFamily="@font/lato_regular"
                        android:layout_marginStart="@dimen/five"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textCopyRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/twenty_three"
                android:background="@null"
                android:fontFamily="@font/lato_regular"
                android:text="@string/ag_moitor_2023"
                android:textColor="@color/edit_text_hint_color"
                android:textSize="@dimen/thirteen" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>