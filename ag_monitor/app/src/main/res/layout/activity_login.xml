<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.authentication.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/imgAgMonitor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ag_monitor"/>
                <TextView
                    android:id="@+id/textWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_to_agmonitor"
                    android:layout_below="@id/imgAgMonitor"
                    android:gravity="center"
                    android:textSize="@dimen/eighteen"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_black"
                    android:layout_marginTop="@dimen/ninteen"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/textPleaseLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_in"
                    android:layout_below="@id/textWelcome"
                    android:gravity="center"
                    android:textSize="@dimen/thirteen"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_regular"
                    android:layout_marginTop="@dimen/ninteen"/>
                <RelativeLayout
                    android:id="@+id/layoutEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textPleaseLogin"
                    android:layout_marginTop="@dimen/twenty_three"
                    android:background="@drawable/bg_edit_text"
                    android:layout_marginHorizontal="@dimen/twenty_six">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TextInputLayoutEmailOrPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five"
                        android:layout_marginTop="@dimen/five"
                        android:layout_marginEnd="@dimen/five"
                        android:hint="@string/your_email_mobile"
                        android:paddingTop="@dimen/three"
                        android:textColorHint="@color/edit_text_hint_color"
                        app:hintTextAppearance="@style/HintText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editEmailOrMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/twenty_two"
                            android:layout_marginVertical="@dimen/ninteen"
                            android:background="@null"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/black"
                            android:textColorHint="@color/edit_text_hint_color"
                            android:textSize="@dimen/normal_text_size" />

                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutEmail"
                    android:layout_marginTop="@dimen/twelve"
                    android:background="@drawable/bg_edit_text"
                    android:layout_marginHorizontal="@dimen/twenty_six">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TextInputLayoutPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five"
                        android:layout_marginTop="@dimen/five"
                        android:paddingTop="@dimen/three"
                        android:layout_marginEnd="@dimen/five"
                        android:hint="@string/password"
                        android:textColorHint="@color/edit_text_hint_color"
                        app:hintTextAppearance="@style/HintText">

                        <EditText
                            android:id="@+id/editPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:textColor="@color/black"
                            android:textSize="@dimen/normal_text_size"
                            android:layout_marginHorizontal="@dimen/twenty_two"
                            android:layout_marginVertical="@dimen/ninteen"
                            android:inputType="textWebPassword"
                            android:textColorHint="@color/edit_text_hint_color"
                            android:fontFamily="@font/lato_regular"/>

                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/textForgotPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="@dimen/thirteen"
                    android:layout_marginHorizontal="@dimen/twenty_six"
                    android:layout_marginTop="@dimen/eight"
                    android:text="@string/forgot_your_password"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_black"
                    android:layout_below="@+id/layoutPassword"/>
                <TextView
                    android:id="@+id/textClickHere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="@dimen/thirteen"
                    android:layout_marginHorizontal="@dimen/twenty_two"
                    android:text="@string/click_here"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_black"
                    android:layout_below="@+id/textForgotPassword"
                    android:visibility="gone"/>
                <LinearLayout
                    android:id="@+id/layoutCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/twenty_two"
                    android:layout_marginTop="@dimen/eighteen"
                    android:layout_below="@+id/textClickHere"
                    android:gravity="start"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textTermsAndPrivacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutGetHelp"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="end"
                        android:text="@string/terms_privacy"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen" />
                    <!--<TextView
                        android:id="@+id/textDoNotHaveAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="@dimen/thirteen"
                        android:text="@string/do_you_have"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_black" />
                    <TextView
                        android:id="@+id/textGetHelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="@dimen/thirteen"
                        android:text="@string/get_help"
                        android:gravity="start"
                        android:textColor="@color/button_color"
                        android:fontFamily="@font/lato_regular"
                        android:layout_marginStart="@dimen/five"/>-->
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/layoutLoginButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutCheckBox"
                    android:layout_marginTop="@dimen/fifteen"
                    android:background="@drawable/bg_button"
                    android:layout_marginHorizontal="@dimen/twenty_six">
                    <TextView
                        android:id="@+id/textButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="@dimen/eighteen"
                        android:layout_marginHorizontal="@dimen/twenty_two"
                        android:layout_marginVertical="@dimen/ninteen"
                        android:text="@string/login"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/lato_medium"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/layoutGetHelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/twenty_two"
                    android:layout_marginTop="@dimen/eight"
                    android:layout_below="@+id/layoutLoginButton"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textDoNotHaveAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="@dimen/thirteen"
                        android:text="@string/do_you_have"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_black" />
                    <TextView
                        android:id="@+id/textGetHelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="@dimen/thirteen"
                        android:text="@string/get_help"
                        android:gravity="start"
                        android:textColor="@color/button_color"
                        android:fontFamily="@font/lato_regular"
                        android:layout_marginStart="@dimen/five"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/textCopyRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/twenty_three"
                android:background="@null"
                android:fontFamily="@font/lato_regular"
                android:text="@string/terms_privacy"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>