<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/button_color</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/edit_text_hint_color</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>
    <style name="HintErrorText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/text_error_color</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>
    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>
</resources>